<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<!-- beans de spring -->
	<bean id="services.categories" class="ar.edu.unq.desapp.grupob.services.CategoryService">
		<property name="dao" ref="persistence.categorydao" />
	</bean>

	<bean id="services.subcategories" class="ar.edu.unq.desapp.grupob.services.SubCategoryService">
		<property name="dao" ref="persistence.subcategorydao" />
	</bean>

	<bean id="services.bankaccounts" class="ar.edu.unq.desapp.grupob.services.BankAccountService">
		<property name="dao" ref="persistence.bankaccountdao" />
	</bean>

	<bean id="services.cashaccounts" class="ar.edu.unq.desapp.grupob.services.CashAccountService">
		<property name="dao" ref="persistence.cashaccountdao" />
	</bean>

	<bean id="services.currentaccounts" class="ar.edu.unq.desapp.grupob.services.CurrentAccountService">
		<property name="dao" ref="persistence.currentaccountdao" />
	</bean>

	<bean id="services.operations" class="ar.edu.unq.desapp.grupob.services.OperationService">
		<property name="dao" ref="persistence.operationdao" />
	</bean>

</beans>